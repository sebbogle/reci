<FluentStack Orientation="Orientation.Vertical">
    <FluentStack Orientation="Orientation.Horizontal" VerticalAlignment="VerticalAlignment.Center" HorizontalGap="5">
        <FluentIcon Value="@(new Icons.Regular.Size20.NoteEdit())" />
        <FluentLabel Typo="Typography.H3">Notes</FluentLabel>
    </FluentStack>
    <FluentCard MinimalStyle="true">
        <FluentLabel>@Notes</FluentLabel>
    </FluentCard>
</FluentStack>

@code {
    [Parameter]
    public required string Notes { get; set; }
}
